                            </div>
                            <br /><br />
                            <div class="wrapper">
                                <div class="input-data">
                                    <input type="email" required="required" />
                                    <label>Email Address</label>
                                </div>
                            </div>
                            <br />
                            @*<div class="d-flex justify-content-end">
