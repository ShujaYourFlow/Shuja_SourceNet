    <main id="main">


        <!-- ======= About Section ======= -->
        <section id="about" class="about-1">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 left-sign-img forget-page">
                        <img src="~/assets/img/forgot-password.svg" alt="" class="img-fluid">
                    </div>


                    <div class="col-lg-6 d-flex flex-column align-items-stretch">

                        <div class="content">

                            <div class="d-flex justify-content-end Link">
                                <div class="d-flex" style="gap:10px; font-size:16px;">
                                    <span>Not a Member?</span><a href="SignUp.html" style="color:#14475f;">Sign Up Now</a>
                                </div>
                            </div>

                            <div class="form">
                                <h4 style="font-size:x-large;">Forgot Password?</h4>
